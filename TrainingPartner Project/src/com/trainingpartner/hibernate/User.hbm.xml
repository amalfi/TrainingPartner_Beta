<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>
    <class name="com.trainingpartner.models.User" table="users" catalog="public">
        <id name="userId" type="java.lang.Integer">
            <column name="userId" />
            <generator class="identity" />
        </id>
        
        <property name="login" type="string">
            <column name="login" length="10" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="20" not-null="true" unique="true" />
        </property>
   		<property name="userDescription" type="string">
            <column name="userDescription" length="20" not-null="true" unique="true" />
        </property>
        
    </class>
</hibernate-mapping>